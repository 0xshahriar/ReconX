      "local_path": "wordlists/fuzzing/open-redirect.txt",
      "size_estimate": "5KB",
      "line_count": 100,
      "category": "open-redirect"
    }
  },
  "gf_patterns": {
    "xss": {
      "name": "xss.json",
      "description": "GF patterns for XSS detection",
      "pattern": "(\\?|&)([a-zA-Z0-9_]+)=([^&]*)(<|>|\"|'|%3C|%3E|%22|%27)",
      "severity": "high"
    },
    "sqli": {
      "name": "sqli.json",
      "description": "GF patterns for SQL Injection",
      "pattern": "(\\?|&)([a-zA-Z0-9_]+)=([^&]*)(union|select|insert|update|delete|drop|--+|#|%23)",
      "severity": "critical"
    },
    "ssrf": {
      "name": "ssrf.json",
      "description": "GF patterns for SSRF",
      "pattern": "(url|path|dest|redirect|uri|src)=([^&]*)",
      "severity": "high"
    },
    "lfi": {
      "name": "lfi.json",
      "description": "GF patterns for LFI",
      "pattern": "(file|path|folder|dir|include|page)=([^&]*)(\\.\\.|%2e%2e|/etc/|/var/|/proc/)",
      "severity": "high"
    },
    "rce": {
      "name": "rce.json",
      "description": "GF patterns for RCE",
      "pattern": "(cmd|command|exec|execute|ping|query|code)=([^&]*)",
      "severity": "critical"
    },
    "idor": {
      "name": "idor.json",
      "description": "GF patterns for IDOR",
      "pattern": "(id|user|account|number|order|item|profile)=([0-9]+)",
      "severity": "medium"
    },
    "debug": {
      "name": "debug.json",
      "description": "GF patterns for debug endpoints",
      "pattern": "(debug|test|dev|staging|admin|api|internal|local)",
      "severity": "low"
    },
    "api_keys": {
      "name": "api-keys.json",
      "description": "GF patterns for API keys in URLs",
      "pattern": "(api[_-]?key|token|secret|password|passwd|pwd)=([^&]{16,})",
      "severity": "critical"
    }
  },
  "update_settings": {
    "auto_update": true,
    "update_interval_days": 7,
    "backup_before_update": true,
    "verify_checksums": false,
    "max_retries": 3,
    "timeout_seconds": 300
  }
}
