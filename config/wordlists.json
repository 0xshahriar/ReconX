  "fuzzing_payloads": {
    "xss": {
      "name": "xss.txt",
      "description": "XSS payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/xss-payload-list/master/Intruder/xss-payload-list.txt",
      "local_path": "wordlists/fuzzing/xss.txt",
      "size_estimate": "50KB",
      "line_count": 1000,
      "category": "xss",
      "contexts": ["html", "attribute", "javascript", "url"]
    },
    "sqli": {
      "name": "sqli.txt",
      "description": "SQL Injection payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/sql-injection-payload-list/master/Intruder/detect/MySQL/MySQL.txt",
      "local_path": "wordlists/fuzzing/sqli.txt",
      "size_estimate": "30KB",
      "line_count": 600,
      "category": "sqli",
      "databases": ["mysql", "postgresql", "mssql", "oracle", "sqlite"]
    },
    "ssrf": {
      "name": "ssrf.txt",
      "description": "SSRF payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/ssrf-payload-list/master/Intruder/ssrf-payloads.txt",
      "local_path": "wordlists/fuzzing/ssrf.txt",
      "size_estimate": "10KB",
      "line_count": 200,
      "category": "ssrf"
    },
    "lfi": {
      "name": "lfi.txt",
      "description": "Local File Inclusion payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/lfi-rfi-payload-list/master/Intruder/LFI/LFI-List.txt",
