      "priority": 1
    },
    "api-endpoints": {
      "name": "api-endpoints.txt",
      "description": "Common API endpoint paths",
      "url": "https://raw.githubusercontent.com/danielmiessler/SecLists/master/Discovery/Web-Content/api/api-endpoints.txt",
      "local_path": "wordlists/api-endpoints.txt",
      "size_estimate": "10KB",
