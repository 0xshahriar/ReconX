      "size_estimate": "20KB",
      "line_count": 400,
      "category": "lfi",
      "os": ["linux", "windows"]
    },
    "rce": {
      "name": "rce.txt",
      "description": "Remote Code Execution payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/command-injection-payload-list/master/Intruder/command-injection-template.txt",
      "local_path": "wordlists/fuzzing/rce.txt",
      "size_estimate": "15KB",
      "line_count": 300,
      "category": "rce"
    },
    "ssti": {
      "name": "ssti.txt",
      "description": "Server-Side Template Injection payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/ssti-payloads/master/Intruder/ssti-payloads.txt",
      "local_path": "wordlists/fuzzing/ssti.txt",
      "size_estimate": "10KB",
      "line_count": 250,
      "category": "ssti",
      "engines": ["jinja2", "twig", "freemarker", "velocity"]
    },
    "xxe": {
      "name": "xxe.txt",
      "description": "XML External Entity payloads",
      "url": "https://raw.githubusercontent.com/payloadbox/xxe-injection-payload-list/master/Intruder/xxe-payload-list.txt",
      "local_path": "wordlists/fuzzing/xxe.txt",
